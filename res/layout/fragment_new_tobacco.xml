<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:layout_gravity="center"
	    android:orientation="horizontal">
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/cam48"/>
	    
	</LinearLayout>
	
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="烟叶品种" />
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
	    <RadioGroup
    		android:id="@+id/id_group_breed"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal" >

    		<RadioButton
        		android:id="@+id/radio0"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:text="云烟87" />

    		<RadioButton
       			android:id="@+id/radio1"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="K236" />
    		
    		<RadioButton
       			android:id="@+id/radio2"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="湘烟3号" />
    		
    		<RadioButton
       			android:id="@+id/radio3"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="其他" />

		</RadioGroup>
	    
	    
	</LinearLayout>
	
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="烟叶部位"/>
	
	 <RadioGroup
    		android:id="@+id/id_group_part"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal" >

    		<RadioButton
        		android:id="@+id/radio4"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:text="下部叶" />

    		<RadioButton
       			android:id="@+id/radio5"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="中部叶" />
    		
    		<RadioButton
       			android:id="@+id/radio6"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="上部叶" />
 

		</RadioGroup>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="含水量"/>
	
	<RadioGroup
    		android:id="@+id/id_group_water"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal" >

    		<RadioButton
        		android:id="@+id/radio7"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:text="较大" />

    		<RadioButton
       			android:id="@+id/radio8"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="适中" />
    		
    		<RadioButton
       			android:id="@+id/radio9"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="较小" />
 

		</RadioGroup>
	
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="烟叶质地"/>
	
	<RadioGroup
    		android:id="@+id/id_group_quality"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal" >

    		<RadioButton
        		android:id="@+id/radio10"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:text="手握弹性好" />

    		<RadioButton
       			android:id="@+id/radio11"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="手握易破碎" />
 
		</RadioGroup>
	
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="烟叶类型"/>
	
	<RadioGroup
    		android:id="@+id/id_group_type"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal" >

    		<RadioButton
        		android:id="@+id/radio12"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
       			android:text="正常" />

    		<RadioButton
       			android:id="@+id/radio13"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="返青" />
    		
    		<RadioButton
       			android:id="@+id/radio14"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="干旱" />
 
			<RadioButton
       			android:id="@+id/radio15"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="黑暴" />
			
			<RadioButton
       			android:id="@+id/radio16"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="后发" />
		</RadioGroup>
	
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="鲜烟成熟度"/>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:orientation="horizontal">
	    
	    <EditText 
	        android:id="@+id/id_maturity_normal"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:hint="适熟烟%"/>
	    
	    <EditText
	        android:id="@+id/id_maturity_below"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:hint="欠熟烟%"/>
	    
	    <EditText 
	        android:id="@+id/id_maturity_above"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:hint="过熟烟%"/>
	    
	</LinearLayout>
	
	<Button android:id="@+id/id_button_done"
	   		 android:layout_width="match_parent"
	    	 android:layout_height="wrap_content"
	    	 android:text="待烤鲜烟检查完毕"/>
	
</LinearLayout>
