<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.innotek.handset"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />
    
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.innotek.handset.activities.LoginActivity"
            android:theme= "@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait" >
           <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> 
        </activity>
        
        
        <activity 
            android:name="com.innotek.handset.activities.HomeActivity"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.innotek.handset.activities.MainActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.innotek.handset.activities.HomeActivity"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.innotek.handset.activities.PreferListActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.innotek.handset.activities.HomeActivity"
            android:screenOrientation="portrait">
        </activity>
        
        
        <activity
            android:name="com.innotek.handset.activities.StationActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.innotek.handset.activities.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.innotek.handset.activities.RoomsActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.innotek.handset.activities.StationActivity"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.innotek.handset.activities.MonitorActivity"
            android:parentActivityName="com.innotek.handset.activities.RoomsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        
       <activity
            android:name="com.innotek.handset.activities.SettingsActivity" >
        </activity>
        
        
        <activity
            android:name="com.innotek.handset.activities.CurveSettingActivity" 
            android:parentActivityName="com.innotek.handset.activities.MonitorActivity">
        </activity>
        
        
        <service android:name="com.innotek.handset.service.LoginService" android:exported="false"></service>
        <service android:name="com.innotek.handset.service.UpdateMessageService" android:exported="false"></service>
        <service android:name="com.innotek.handset.service.SendCommandService" android:exported="false"></service>
    </application>

</manifest>
